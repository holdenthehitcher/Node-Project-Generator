<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
      crossorigin="anonymous"
    />
    <title>Project Generator</title>
  </head>
  <body>
    <style>
			img {
				height: 200px;
				width: auto;
			}
    </style>
    <div class="container">
      <h1 class="mb-4">Portfolio Projects</h1>
      <a class="btn btn-success" href="/projects/new">New Project</a>
      <% projects.forEach(project => { %>
        <div class="row">
          <div class="col">
            <div class="card mt-4 col-md-9 col-lg-7 col-xl-6">
              <div class="card-body">
                <h3 class="card-title ml-1"><%= project.title %></h3>
                <img src="/images/<%= project.image %>" class="ml-1 mb-2" />
              <div class="row">
                  <div class="col">
                  <div class="project description card-text mb-3 "><%= project.description %></div>
                  </div>
              </div>
                <div class="row d-block ml-2">
                  <div class="col">
                    <a href="projects/<%= project.slug %>" class="btn btn-primary">Read More</a>
                    <a class="btn btn-dark" href=<%= project.github %>>Github link</a>
                  </div>
                </div>
                <div class="row d-block mt-2 ml-2">
                  <div class="col">
                    <a href="projects/edit/<%= project.id %>" class="btn btn-info">Edit</a>
                    <form action="/projects/<%= project.id %>?_method=DELETE" method="POST" class="d-inline">
                      <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </body>
</html>
